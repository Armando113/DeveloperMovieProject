@model IEnumerable<MovieDataBase.MovieData.Movie>

@{
    ViewBag.Title = "MovieLib";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MovieLib</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @Html.TextBox("MovieName_TXB1", "Search movie...", new {@class = "form-control" })
</p>
<p>
    @Html.DropDownList("Rating", new SelectList(Enum.GetValues(typeof(MovieDataBase.MovieData.MovieRating))), "Select Rating:", new { @class = "form-control" });
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name);
        </th>
        <th>
            @Html.DisplayNameFor(model => model.genre);
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name);
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.genre);
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>
