@model TheMovieDB.Models.DeleteViewModel
@{
    ViewBag.Title = "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("DeleteUser", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <p>@Html.LabelFor(model => model.UserName, new { @class = "col-md-10" })</p>
    <p>@Html.LabelFor(model => model.Email, new { @class = "col-md-10" })</p>
}


