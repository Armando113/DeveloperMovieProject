@model TheMovieDB.Models.DeleteViewModel

@{
    ViewBag.Title = "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete User</h2>

<h3>Are you sure you want to delete this? T_T</h3>
@using (Html.BeginForm("DeleteUser", "Login", new { ReturnUrl = "~/Login/ViewAccounts"}, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group dl-horizontal">
        <hr />
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)
            </dd>

        </dl>
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default"/> |
            @Html.ActionLink("Back to List", "ViewAccounts", "Login")
        </div>
    </div>
}

